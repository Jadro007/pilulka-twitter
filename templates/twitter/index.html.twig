{% extends 'base.html.twig' %}

{% block title %}Hello!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello! âœ…</h1>

    This is list of tweets about Pilulka.

    <ul>

        {% if error %}
        <b>Error during communication with Twitter, sorry.</b>

        {% else %}
            {% for tweet in tweets %}
                <li><a href="https://twitter.com/i/web/status/{{ tweet.id }}">{{ tweet.text }}</a></li>
            {% else %}
                <em>No tweets found</em>
            {% endfor %}
        {% endif %}

    </ul>
</div>
{% endblock %}
